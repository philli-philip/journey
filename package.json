{
  "name": "journey",
  "version": "0.0.1",
  "private": false,
  "scripts": {
    "lint": "npm run frontend:lint && npm run backend:lint",
    "check": "npm run frontend:check && npm run backend:check",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "frontend:lint": "cd frontend && npm run lint",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:dev": "cd server && npm run start",
    "frontend:check": "cd frontend && npm run check",
    "backend:lint": "cd server && npm run lint",
    "backend:check": "cd server && npm run check",
    "seed": "cd server && npm run seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vite": "^6.3.5"
  }
}
